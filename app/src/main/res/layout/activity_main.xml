<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#f2d3d3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULATOR"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt1"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="7"
        android:textSize="32dp"
        android:textColor="#ed8080"
        android:backgroundTint="@color/white"
        android:layout_margin="8dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/btn4"
        app:layout_constraintEnd_toStartOf="@id/btn8"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="8"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:textColor="#ed8080"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@id/btn7"
        app:layout_constraintEnd_toStartOf="@id/btn9"
        app:layout_constraintBottom_toTopOf="@id/btn5"/>
    <Button
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:textColor="#ed8080"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@id/btn8"
        app:layout_constraintEnd_toStartOf="@id/btnmul"
        app:layout_constraintBottom_toTopOf="@id/btn6"/>


    <Button
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:text="4"
        android:textColor="#ed8080"
        android:backgroundTint="@color/white"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@id/btn1"
        app:layout_constraintEnd_toStartOf="@id/btn5"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="5"
        android:textColor="#ed8080"
        android:backgroundTint="@color/white"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/btn4"
        app:layout_constraintEnd_toStartOf="@id/btn6"
        app:layout_constraintBottom_toTopOf="@id/btn2"/>
    <Button
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="6"
        android:textSize="32dp"
        android:textColor="#ed8080"
        android:backgroundTint="@color/white"
        android:textAlignment="center"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/btn5"
        app:layout_constraintEnd_toStartOf="@id/btnmin"
        app:layout_constraintBottom_toTopOf="@id/btn3"/>
    <Button
        android:id="@+id/btnmin"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="-"
        android:textColor="@color/white"
        android:backgroundTint="#ed8080"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/btn6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnplus"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:text="1"
        android:textColor="#ed8080"
        android:backgroundTint="@color/white"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@id/btn0"
        app:layout_constraintEnd_toStartOf="@id/btn2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:text="2"
        android:textColor="#ed8080"
        android:backgroundTint="@color/white"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@id/btndec"
        app:layout_constraintEnd_toStartOf="@id/btn3"
        app:layout_constraintStart_toEndOf="@id/btn1"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:text="3"
        android:textColor="#ed8080"
        android:backgroundTint="@color/white"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@id/btnac"
        app:layout_constraintEnd_toStartOf="@id/btnplus"
        app:layout_constraintStart_toEndOf="@id/btn2" />
    <Button
        android:id="@+id/btnplus"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="+"
        android:textColor="@color/white"
        android:backgroundTint="#ed8080"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/btn3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btndiv"/>

    <Button
        android:id="@+id/btn0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:text="0"
        android:textColor="#ed8080"
        android:backgroundTint="@color/white"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@id/btneq"
        app:layout_constraintEnd_toStartOf="@id/btndec"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btndec"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:text="."
        android:textColor="@color/white"
        android:backgroundTint="#ed8080"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@id/btneq"
        app:layout_constraintEnd_toStartOf="@id/btnac"
        app:layout_constraintStart_toEndOf="@id/btn0" />
    <Button
        android:id="@+id/btnac"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="AC"
        android:textColor="@color/white"
        android:backgroundTint="#ed8080"
        android:textSize="24dp"
        android:textAlignment="center"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/btndec"
        app:layout_constraintEnd_toStartOf="@id/btndiv"
        app:layout_constraintBottom_toTopOf="@id/btneq"/>

    <Button
        android:id="@+id/btnmul"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="x"
        android:textColor="@color/white"
        android:backgroundTint="#ed8080"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/btn9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnmin"/>

    <Button
        android:id="@+id/btndiv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="/"
        android:textColor="@color/white"
        android:backgroundTint="#ed8080"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintStart_toEndOf="@id/btnac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btneq"/>

    <Button
        android:id="@+id/btneq"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="="
        android:textColor="@color/white"
        android:backgroundTint="#ed8080"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:hint="result"
        android:textSize="24dp"
        android:padding="32dp"
        android:textAlignment="textEnd"
        android:layout_marginTop="100dp"
        android:textColor="#474343"
        android:background="@drawable/reg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn8"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>